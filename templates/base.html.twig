<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<title>
			{% block title %}{% endblock %}
		</title>
		{# Run `composer require symfony/webpack-encore-bundle`
								           and uncomment the following Encore helpers to start using Symfony UX #}
		{% block stylesheets %}
			<link href="https://unpkg.com/tailwindcss@^2/dist/tailwind.min.css" rel="stylesheet">
		{% endblock %}

		{% block javascripts %}
			{#{{ encore_entry_script_tags('app') }}#}
		{% endblock %}
	</head>
	<body class="flex flex-col h-screen">
		{% block navbar %}
			<div class="p-3 bg-gray-800 text-gray-200 grid grid-flow-col flex items-center">

				<a href="{{ path('home') }}"><img class="h-12 w-auto" src="{{ asset('/images/gsblogo.png')}}" alt=""></a>
				<a class="transition duration-500 hover:text-gray-400" href="{{ path('compte_rendu_create') }}">Créer un compte-rendu</a>
				<a class="transition duration-500 hover:text-gray-400" href="{{ path('compte_rendu') }}">Consulter comptes-rendus</a>
				<a class="transition duration-500 hover:text-gray-400" href="{{ path('praticien') }}">Consulter liste des praticiens hésitants</a>
				<a class="transition duration-500 bg-red-600 w-auto flex justify-center rounded-md hover:bg-red-700 p-1" href="{{ path('logout') }}">Déconnexion</a>

			</div>
		{% endblock %}
		<div class="flex-grow"> {% block content %}{% endblock %}
			</div>
			{% block footer %}
				<div class="bg-gray-800 text-gray-200 flex justify-center p-2">
					©GSB-SYMFONY 2021 | TILLIER MATHIEU
				</div>
			{% endblock %}
		</body>
	</html>
